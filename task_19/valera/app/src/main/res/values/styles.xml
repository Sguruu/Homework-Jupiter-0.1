<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle">
        <item name="android:background">@color/purple_700</item>
        <item name="titleTextColor">@color/green</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="elevation">8dp</item>
    </style>

    <!--
    android:editTextColor - изменение цвета вводимого текста
    android:textColorSecondary - изменение цвета занчка (три точки) меню
    -->
    <style name="ToolbarTheme">
        <item name="android:textColorSecondary">@color/green</item>
        <item name="android:editTextColor">@color/green</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
    </style>

    <!-- Изменение цвета текста для элементов меню -->
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:theme">@style/EditTextTheme</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">34</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorSecondary">@color/black</item>
    </style>
</resources>